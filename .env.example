# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL connection string
# Format: postgres://username:password@host:port/database?sslmode=disable&search_path=schema_name
# Example: postgres://postgres:password@localhost:5432/postgres?sslmode=disable&search_path=bpr_supra
DB_CONN_STRING=postgres://username:password@localhost:5432/database_name?sslmode=disable&search_path=schema_name

# Database connection pool settings
# Maximum number of open connections to the database
DB_MAX_OPEN_CONNS=25

# Maximum number of idle connections in the pool
DB_MAX_IDLE_CONNS=10

# Maximum lifetime of a connection in minutes
DB_CONN_MAX_LIFETIME_MINUTES=5

# Database ping timeout in seconds
DB_PING_TIMEOUT_SECONDS=5


# ============================================
# AI SERVICE CONFIGURATION (GROQ)
# ============================================

# Groq API Key for LLM service
# Get your API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Groq model to use for SQL generation
# Options: llama-3.1-8b-instant, llama-3.1-70b-versatile, mixtral-8x7b-32768
GROQ_MODEL=llama-3.1-8b-instant

# Groq API endpoint URL
GROQ_API_URL=https://api.groq.com/openai/v1/chat/completions

# HTTP timeout for Groq API calls in seconds
GROQ_TIMEOUT_SECONDS=30


# ============================================
# GOOGLE AI CONFIGURATION (EMBEDDING)
# ============================================

# Google AI API Key for embedding service
# Get your API key from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_api_key_here

# Google embedding model name
# Default: models/text-embedding-004
EMBEDDING_MODEL=models/text-embedding-004

# Vector dimension size for embeddings
EMBEDDING_VECTOR_SIZE=768


# ============================================
# QDRANT VECTOR DATABASE CONFIGURATION
# ============================================

# Qdrant gRPC host
QDRANT_GRPC_HOST=localhost

# Qdrant gRPC port
QDRANT_GRPC_PORT=6334

# Qdrant REST API URL
# Used for collection management and point operations
QDRANT_URL=http://localhost:6333

# Qdrant collection name for RAG (Retrieval-Augmented Generation)
QDRANT_COLLECTION_NAME=bpr_supra_rag

# Qdrant collection name for semantic cache
QDRANT_CACHE_COLLECTION=bpr_supra_cache

# Vector distance metric
# Options: Cosine, Euclid, Dot
QDRANT_DISTANCE_METRIC=Cosine

# HTTP timeout for Qdrant REST API calls in seconds
QDRANT_TIMEOUT_SECONDS=60


# ============================================
# SEMANTIC CACHE CONFIGURATION
# ============================================

# Similarity threshold for cache hits (0.0 to 1.0)
# Higher value = stricter matching
# Recommended: 0.90 - 0.98
CACHE_SIMILARITY_THRESHOLD=0.95

# Maximum number of cache results to retrieve
CACHE_SEARCH_LIMIT=1


# ============================================
# RAG (Retrieval-Augmented Generation) CONFIGURATION
# ============================================

# Number of relevant context chunks to retrieve from vector DB
# Higher value = more context but slower
RAG_SEARCH_LIMIT=7


# ============================================
# SERVER CONFIGURATION
# ============================================

# Server port to listen on
# Default: 8080
SERVER_PORT=8080

# Server host/address to bind to
# Use 0.0.0.0 to listen on all interfaces
# Use localhost or 127.0.0.1 for local only
SERVER_HOST=localhost


# ============================================
# QUERY EXECUTION CONFIGURATION
# ============================================

# Timeout for database query execution in seconds
QUERY_TIMEOUT_SECONDS=10


# ============================================
# ENVIRONMENT
# ============================================

# Application environment
# Options: development, production, staging
APP_ENV=development

# Enable debug logging
# Options: true, false
DEBUG=false

